bg-img($imgUrl) {
  background: url($imgUrl + "@2x.png") no-repeat // 默认2x 图
  @media (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3) {
    background: url($imgUrl + "@3x.png") cover no-repeat
  }
  @media (-webkit-min-device-pixel-ratio: 1), (min-device-pixel-ratio: 1) {
    background: url($imgUrl + ".png") cover no-repeat
  }
}

