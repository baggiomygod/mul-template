body{
  h1,h2,h3,h4,h5,p.div,span,a {
    font-family: Microsoft Yahei !important;
  }
}
/*======================
  ul li
=======================*/
li{
  list-style: none
}
/*======================
  padding margin
=======================*/
.mt-15{
  margin-top: 15px
}
.mb-15 {
  margin-bottom: 15px
}
.mt-30{
  margin-top: 30px
}
.mb-30 {
  margin-bottom: 30px
}
.mt-50{
  margin-top: 50px
}
.mb-50 {
  margin-bottom: 50px
}

.pb-30 {
  padding-bottom: 30px
}
/*======================
  字体
=======================*/
.font-size-13{
    font-size: 13px
}
.font-size-14{
    font-size: 14px
}
/*======================
  格式化样式
=======================*/
a {
  text-decoration: none
}

ul {
    -webkit-padding-start: 0px !important;
}

/*======================
  浮动
=======================*/
.clearfix{
  &:before,&:after {
    content: ""
    display: table
  }
  &:after{
    clear: both
  }
}

.pull-right{
    float: right
  }

.pull-left{
    float: left
  }
